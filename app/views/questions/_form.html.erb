<div class="span9">
<%= form_for(@question, html: {}) do |f| %>
  <% if @question.errors.any? %>
    <div class="alert alert-error">
      <ul>
        <% @question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label"><%= Question.human_attribute_name :title %></label>
    <div class="controls">
      <%= f.text_field :title, class: 'span6' %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.text_area :body, class: 'span10', rows: 5 %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label"><%= Question.human_attribute_name :from_name %></label>
    <div class="controls">
      <%= f.text_field :from_name, class: 'span4' %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label"><%= Question.human_attribute_name :from_email %></label>
    <div class="controls">
      <%= f.text_field :from_email, class: 'span4' %>
    </div>
  </div>

  <div class="control-group">
     <div class="controls">
       <%= f.submit class: 'btn' %>
     </div>
  </div>
<% end %>
</div>

