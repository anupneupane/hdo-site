<div class="page-header">
  <%= link_to t('app.questions.new'), new_question_path, class: 'btn btn-primary pull-right' %>
  <h1>Sp√∏r en stortingspolitiker</h1>
</div>

<div class="questions-index container-fluid">
  <% @questions.each_slice(2) do |questions| %>
    <div class="question-row row-fluid">
      <% questions.each do |question| %>
        <%= link_to question, class: 'question span6' do %>
          <div class="row-fluid">
            <div class="span6">
              <div class="timestamp">
                <%= distance_of_time_in_words_to_now question.updated_at.localtime %> siden
              </div>

              <div class="recipient">
                Til: <%= question.representative.name %>
                <div class="district"><%= question.representative.district.name %></div>
              </div>
            </div>

            <div class="visible-desktop">
              <div class="span3">
                <img src="<%= path_to_image question.representative.image.versions[:small] %>">
              </div>

              <div class="span3">
                <%= image_tag question.representative.current_party.logo, alt: question.representative.current_party.name %>
              </div>
            </div>

            <div class="visible-phone">
              <div class="images-row">
                <img src="<%= path_to_image question.representative.image.versions[:small] %>">
                <%= image_tag question.representative.current_party.logo, alt: question.representative.current_party.name %>
              </div>
            </div>
          </div>

          <hr class="visible-desktop">
          <div><%= question.teaser %></div>
        <% end %>
      <% end %>
    </div>
    <% end %>
</div>

<%= will_paginate @questions, class: "pagination pagination-centered visible-desktop" %>
<%= will_paginate @questions, class: "pagination pagination-small pagination-centered visible-phone", page_links: false %>
