<h2>Sign in</h2>

<%= form_for("user", :url => user_session_path) do |f| %>
  <%= f.label :email_or_id %>
  <%= f.text_field :login %>
  <%= f.label :password %>
  <%= f.password_field :password %><br/>
  <%= f.submit t('app.login') %><br/>
  <%= link_to "Forgot your password?", new_password_path('user') %>
<% end %>