<h2>Menneskene bak</h2>
<br>

<div class="row-fluid">
  <div class="span9">

    <h3>Styre og administrasjon</h3>
    <br>

    <% @board.each do |person| %>
      <p>
        <% if person.email %>
        <a href="mailto:<%= obscure_email person.email %>"><strong><%= person.name %></strong></a> <%= person.bio.to_s.html_safe %>
        <% else %>
          <strong><%= person.name %></strong> <%= person.bio.to_s.html_safe %>
        <% end %>
      </p>
    <% end %>
  </div>
  
  <div class="span3">
    <h3>Bidragsytere</h3>
    <br>

    <ul class="unstyled">
    <% @contributors.each do |person| %>
      <li><%= person.name %></li>
    <% end %>
    </ul>
  </div>
</div>

<hr class="soften">

<div class="row-fluid">
  <div class="span6">
    <h3>Tidligere bidragsytere</h3>
    <br>

    <ul class="unstyled">
    <% @alumni.each do |person| %>
      <li><%= person.name %></li>
    <% end %>
    </ul>
  </div>
</div>

<hr class="soften">