<h2>Menneskene bak</h2>
<br>

<div class="row-fluid">
  <div class="span9">

    <h3>Styre og administrasjon</h3>
    <br>

    <% @board.each do |person| %>
      <div class="row-fluid">
        <div class="span2">
          <% if person.image %>
            <%= image_tag asset_path(person.image)  %>
          <% else %>
            <%= image_tag 'representatives/unknown.jpg' %>
          <% end %>
        </div>

        <div class="span10">
          <p>
            <% if person.email %>
              <a href="mailto:<%= obscure_email person.email %>"><strong><%= person.name %></strong></a> <%= person.bio.to_s.html_safe %>
            <% else %>
              <strong><%= person.name %></strong> <%= person.bio.to_s.html_safe %>
            <% end %>
          </p>
        </div>
      </div>
    <% end %>

    <p class="pagination-centered muted">Foto: Alex Asensi/Holder de ord</p>
  </div>

  <div class="span3">
    <h3>Bidragsytere</h3>
    <br>

    <ul class="unstyled">
    <% @contributors.each do |person| %>
      <li><%= person.name %></li>
    <% end %>
    </ul>
  </div>
</div>

<hr class="soften">

<div class="row-fluid">
  <div class="span6">
    <h3>Tidligere bidragsytere</h3>
    <br>

    <ul class="unstyled">
    <% @alumni.each do |person| %>
      <li><%= person.name %></li>
    <% end %>
    </ul>
  </div>
</div>

