<header>
  <h1><%= Promise.model_name.human(count: 2).capitalize %></h1>
</header>

<article>
  <% @promise_groups.each do |parties, promises| %>
    <h2 class="party <%= slug_for_parties(parties) %>"><%= parties.map(&:name).to_sentence %></h2>
    <ul>
      <% promises.each do |promise| %>
      <li><%= promise.body %></li>
      <% end %>
    </ul>
  <% end %>
</article>
