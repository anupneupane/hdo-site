<div class="valence">
  <% @issue.valence_issue_explanations.each do |valence| %>

    <div class="constellation">

      <div class="icon-list">
        <% valence.parties.each do |party| %>
          <%= image_tag party.logo.versions[:medium] %>
        <% end %>
      </div>

      <h3><%= valence.title %></h3>
      <p>
        <%= valence.parties.map(&:name).to_sentence %>
        <%= valence.explanation.downcase %>.
      </p>

    </div>

  <% end %>
</div>
