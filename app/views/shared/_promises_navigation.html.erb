<div class="well well-small" id="top">
  <!-- VISIBLE IN DESKTOP -->
  <div class="row-fluid">
    <div class="span4">
      <h6>Hovedkategorier</h6>
      <ul class="nav multiple-select">
        <li>
          <%= link_to "Vis alle", promises_path(party_slug: @party_slug) %>
        </li>
        <% categories.each do |category| %>
          <li class="<%= category.id == @category_id.to_i ? 'active' : '' %>">
            <%= link_to category.human_name, promises_path(category_id: category.id, party_slug: @party_slug, anchor: 'top') %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="span4" id="subcategories-select">
      <h6>Underkategorier</h6>
      <ul class="nav multiple-select">
        <% categories.each do |category| %>
          <% category.children.each do |subcategory| %>
            <li class="<%= subcategory.id == @subcategory_id.to_i ? 'active' : ''; subcategory.parent_id == @category_id.to_i ? '' : 'hidden' %>">
              <%= link_to subcategory.human_name, promises_path(category_id: category.id, subcategory_id: subcategory.id, party_slug: @party_slug, anchor: 'top') %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>

    <div class="span4">
      <h6>Partier</h6>
      <ul class="nav multiple-select">
        <li>
          <%= link_to "Vis alle", promises_path(category_id: @category_id, subcategory_id: @subcategory_id) %>
        </li>
        <% parties.each do |party| %>
          <li class="<%= party.slug == @party_slug ? 'active' : '' %>">
            <%= link_to party.name, promises_path(category_id: @category_id, subcategory_id: @subcategory_id, party_slug: party.slug, anchor: 'top') %>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>

  <!-- VISIBLE IN MOBILE --> 
<div class="hidden-desktop">
  <select class="categories">
    <option>Velg kategori</option>
    <% categories.each do |category| %>
      <option data-category-id="<%= category.id %>"><%= category.human_name %></option>
    <% end %>
  </select>
  <select id="subcategory-dropdown" class="hidden">
    <option>Velg underkategori</option>
  </select>
</div>