<% title "#{@issue.title} - #{t('app.issues.title')} - #{t('app.title')}" %>
<%= render partial: 'admin_info' if user_signed_in? %>

<div class="page-header">

  <figure>
    <div class="issue-graph row-fluid">
      <% @issue.position_groups.each do |label, parties| %>
        <div class="span4">
          <% parties.each do |party| %>
            <%= image_tag party.image_with_fallback.url %>
          <% end %>
          <h3><%= label %></h3>
        </div>
      <% end %>
    </div>

    <figcaption class="muted"><%= @issue.explanation %></figcaption>

  </figure>

  <h1><%= @issue.title %></h1>
  <aside class="muted">
    Oppdatert <%= @issue.updated_at %>
    <% if @issue.published? %>
      <small class="muted">
        <strong><%= Issue.human_attribute_name(:published_at) %></strong>: <%= @issue.published_at %>
        <strong><%= Issue.human_attribute_name(:updated_at) %></strong>: <%= @issue.updated_at %>
      </small>
    <% end %>
  </aside>

  <p class="issue-description"><%= @issue.description %></p>

</div>


<div>
  <% @issue.party_groups.each do |party_group| %>
    <h5 class="issue-party-group-title"><%= party_group.name %></h5>

    <% party_group.parties.each do |party| %>
      <%= render partial: 'issue_party', locals: { party: party } %>
    <% end %>
  <% end %>
</div>



