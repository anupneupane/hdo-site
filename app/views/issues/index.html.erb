<% page_title "#{t('app.issues.title')} - #{t('app.title')}" %>

<section class="top-issues">
  <% @groups.each do |tag, issues| %>
    <div class="row-fluid" id="tag-<%= tag.slug %>">
      <h3 class="top-issues-caption"><%= tag.name %></h3>
      <% issues.each_slice(3) do |issues| %>
        <div class="row-fluid">
        <% issues.each do |issue| %>
          <article class="issue span4">
          <%= link_to issue do %>
            <h4><%= issue.title %></h4>
            <p>
              <%= awesome_truncate issue.description, 400 %>
              <span class="read-more"><%= t('app.read_more') %></span>
            </p>
          <% end %>
          </article>
        <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</section>

