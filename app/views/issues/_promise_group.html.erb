<h5 class="issue-party-promise-title <%= 'muted' if promise_connections.all?(&:related?) %>">LÃ¸fter fra <%= source %></h5>
<ul class="issue-party-promise-list">
  <% if promise_connections.any? %>
    <% promise_connections.each do |pc| %>
      <li class="<%= 'muted' if pc.related? %>">
        <%= link_to promise_path(pc.promise) do %>
          <%= pc.promise.body %>

          <% if pc.future? %>
            <%= "(#{t 'app.parties.future_promise'})" if pc.future? %>
          <% elsif pc.related? %>
            <%= "(#{t 'app.parties.related_promise'})" if pc.related? %>
          <% end %>
        <% end %>
      </li>
    <% end %>
  <% else %>
    <li class="muted"><%= t 'app.parties.no_promises' %></li>
  <% end %>
</ul>
