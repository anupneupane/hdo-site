<div class="issue-navigation">
  <%= link_to @issue do %>
    &larr; <%= t 'app.issues.back' %>
  <% end %>
</div>

<div class="row-fluid">
  <div class="span12">
    <h2 class="page-header">
      <%= Vote.model_name.human(count: 2).capitalize %> <%= Vote.human_attribute_name(:about) %> <%= t 'app.lang.infinitive_particle' %> <%= @issue.downcased_title %>
    </h2>

    <% @issue_votes.each do |issue_vote| %>
      <div class="row-fluid">
        <div class="span12">
          <h3>
            <%= issue_vote.description %>
            <small class="pull-right">
              <%= link_to issue_vote.vote do %>
                <%= t 'app.issues.view_vote' %> &rarr;
              <% end %>
            </small>
          </h3>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <dl>
            <% issue_vote.parties.each do |party| %>
              <dt><%= party.text %></dt>
              <dd><p><%= image_tag party.logo.thumb("50x50").url %> <small><%= party.counts %></small></p></dt>
            <% end %>
          </ul>
        </div>

        <div class="span6">
          <dl>
            <dt>Kommentar</dt>
            <dd>
              <p>
                <%= issue_vote.comment %>
                <small><%= link_to t('app.method.read_more'), home_method_path %>.</small>
              </p>
            </dd>

            <dt>Vekting</dt>
            <dd><%= issue_vote.weight_text %> (<%= '%g' % issue_vote.weight %>)</dd>

            <dt>StÃ¸tter saken</dt>
            <dd><%= issue_vote.matches_text %></dd>

            <dt>Vedtatt</dt>
            <dd class="label <%= issue_vote.enacted_class %>"><%= issue_vote.enacted_text %></dd>
          </dl>
        </div>
      </div>

      <hr class="soften">
    <% end %>

  </div>
</div>
