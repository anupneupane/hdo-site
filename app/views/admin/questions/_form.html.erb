  <%= form_for(@question, url: admin_question_url(@question)) do |f| %>
    <% if @question.errors.any? %>
      <div class="alert alert-error">
        <ul>
          <% @question.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <div class="controls">
        <label class="control-label"><%= Question.human_attribute_name :representative %></label>
        <div class="chosen-xlarge">
          <%= f.select :representative, representative_options, include_blank: 'Velg en representant...' %>
        </div>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <label class="control-label"><%= Question.human_attribute_name :body %></label>
        <%= f.text_area :body, class: 'span12 qa-form-body',
                               rows:  5,
                               placeholder: "KjÃ¦re parti/representant! Hvordan kan det ha seg at..." %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="control-group span5">
        <label class="control-label"><%= Question.human_attribute_name :from_name %></label>
        <div class="controls">
          <%= f.text_field :from_name, class: 'span12' %>
        </div>
      </div>

      <div class="control-group span5 offset2">
        <label class="control-label"><%= Question.human_attribute_name :from_email %></label>
        <div class="controls">
          <%= f.text_field :from_email, class: 'span12' %>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="control-group span5">
        <label class="control-label"><%= Issue.model_name.human(count: 2).capitalize %></label>
        <div class="controls">
          <%= f.select :issues, question_issue_options, {}, multiple: true %>
        </div>
      </div>
    </div>

    <div class="control-group">
       <div class="controls">
         <%= f.submit class: 'btn btn-primary' %>
       </div>
    </div>
  <% end %>

<% content_for :document_ready do %>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
      $("#question_issues").chosen();
    });
  </script>
<% end %>