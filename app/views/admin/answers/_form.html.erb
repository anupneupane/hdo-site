<div class="row-fluid">
  <div class="well">
    <h3>Spørsmål: <%= @question.teaser %></h3>
    <p><%= @question.body %></p>
  </div>
</div>

<div class="row-fluid">
  <%= form_for([:admin, @question, @answer]) do |f| %>
    <% if @answer.errors.any? %>
      <div class="alert alert-error">
        <ul>
          <% @answer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <label class="control-label"><%= Answer.human_attribute_name :body %></label>
      <div class="controls">
        <%= f.text_area :body %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label"><%= Answer.human_attribute_name :representative %></label>
      <div class="controls">
        <%= f.select :representative_id, representative_options %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
