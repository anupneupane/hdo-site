<% if questions.empty? %>
  <%= representative.full_name %> har foreløpig ingen spørsmål.
<% else %>
  <ul>
    <% questions.each do |question| %>
      <li>
        <%= link_to question.teaser, question %>

        <p class="muted">
          Av <strong><%= question.from_display_name %></strong>.

          <% if question.answered? %>
            Besvart for <%= distance_of_time_in_words question.answer.created_at, Time.now %> siden.
          <% else %>
            Venter på svar.
          <% end %>
        </p>
      </li>
    <% end %>
  </ul>
<% end %>
