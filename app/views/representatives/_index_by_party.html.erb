<% groups.each do |party, representatives| %>
  <div class="row-fluid">
    <h2>
      <%= link_to party do %>
        <%= image_tag party.image_with_fallback.thumb("200x200").strip.url %>
      <% end %>
      <%= party.name %>
    </h2>
  </div>

  <div class="row-fluid">
    <div class="span6"><h5><%= Representative.human_attribute_name :name %></h5></div>
    <div class="span6"><h5><%= Representative.human_attribute_name :district %></h5></div>
  </div>

  <% representatives.each do |rep| %>
  <div class="row-fluid">
    <div class="span6"><%= link_to rep.display_name, rep %></div>
    <div class="span6"><%= link_to rep.district.name, rep.district %></div>
  </div>
  <% end %>

  <hr class="soften">
<% end %>

