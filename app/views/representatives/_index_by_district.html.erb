<% groups.each do |district, representatives| %>
  <h3><%= district.name %></h3>
  <div class="row-fluid">
    <div class="span6"><h4><%= Representative.human_attribute_name :name %></h4></div>
    <div class="span6"><h4><%= Representative.human_attribute_name :party %></h4></div>
  </div>

  <% representatives.each do |rep| %>
  <div class="row-fluid">
    <div class="span6"><%= link_to rep.display_name, rep %></div>
    <div class="span6"><%= link_to rep.current_party.try(:name), rep.current_party %></div>
  </div>
  <% end %>

  <hr class="soften">
<% end %>

