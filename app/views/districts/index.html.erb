<% page_title "#{District.model_name.human(count: 2).capitalize} - #{t('app.title')}" %>
<div class="page-header">
  <h1><%= District.model_name.human(count: 2).capitalize %></h1>
</div>

<div id="districts">
  <% @districts.each_slice(4) do |districts| %>
    <div class="row-fluid">
      <% districts.each do |district| %>
        <div class="span3">
          <%= link_to district, class: "district" do %>
            <%= image_tag district.svg_path, class: 'logo' %>

            <div class="text">
              <h3 class="name"><%= district.name %></h3>
              <aside><%= district.attending_representatives.count %> representanter</aside>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
